var gv_GA_Category = ""; 	// 카테고리
var gv_GA_Action = ""; 		// 액션
var gv_GA_Label = "";		// 라벨

function makeScriptGA_Event_init()
{
	gv_GA_Category = "";
	gv_GA_Action = "";
	gv_GA_Label = "";
}

//Device 값이 'Y' 이면 Category 값을 그대로 사용
//Device 값이 'N' 이면 Category 값에 디바이스종류를 삽입 
function makeScriptGA_Event(Category, Action, Label, Device)
{
	makeScriptGA_Event_init();
	gv_GA_Category = Category;
	gv_GA_Action = Action;
	gv_GA_Label = Label;

	var browserInfo = navigator.userAgent;

	if(Device == 'N') {
		if(browserInfo.indexOf("AP_Android") > -1 || browserInfo.indexOf("AP_iOS") > -1) {
 ﻿			gv_GA_Category = 'APP_' + Category
		} else {
		﻿	gv_GA_Category = 'MO_' + Category
		}
	}
	if(browserInfo.indexOf("AP_Android") > -1 || browserInfo.indexOf("AP_iOS") > -1) {
		makeScriptGA_SendApp_E();
	} else {
		//ga('send', 'event', gv_GA_Category, gv_GA_Action, gv_GA_Label);
	}

}